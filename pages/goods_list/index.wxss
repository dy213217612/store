.first_tab{

}
.goods_item{
display: flex;
border-bottom: 1rpx #ccc solid;
}
.goods_img_wrap{
flex: 2;
display: flex;
justify-content: center;
align-items: center;
}
.goods_img_wrap image{
width: 70%;
}
.goods_info_warp{
